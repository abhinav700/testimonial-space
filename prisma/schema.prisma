generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Space{
  // TODO : Also add a profile picture for the space.
  id String @id @unique  @default(uuid())
  owner User @relation(fields: [ownerEmail], references: [email])
  ownerEmail String
  spaceName String @unique
  headerTitle String
  customMessage String
  questions String[] @default([])
}

// our user who creates space for collecting testimonials
model User{
  // ToDo: Also add a profile picture for user
  id String @id @unique @default(uuid())
  email String @unique
  createdAt DateTime @default(now())
  name String 
  spaces Space[]
}

model Testimonial{
  id String @id @unique @default(uuid())
  description String?
  customerName String
  customerEmail String
}
